{
  "compilerOptions": {
    "target": "es5",
    "allowJs": true,
    "outDir": "./dist",
    "strict": true,
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["app.ts", "**/*.ts"],
  "exclude": ["node_modules"]
}
